

interface Speak {
    Boolean canSpeak = true;
    void Speak();
}
interface Walk {
    Boolean canWalk = true;
    void Walk();
}

class Person implements Speak, Walk{
    private String name;
    private int age;

    Person(String name, int age) {
        this.name = name;
        this.age = age;
    }
    @Override
    public void Speak() {
        System.out.println(name + " started speaking!");
    }

    @Override
    public void Walk() {
        System.out.println(name + " started walking!");
    }
}
public class InterfaceCode {
    public static void main(String[] args) {
        Person person1 = new Person("Michael", 18);
        Person person2 = new Person("Alexa", 30);


        Person[] list = {person1, person2};
        for (Person person: list) {
            System.out.println("**********************");
            person.Speak();
            person.Walk();
        }

        System.out.println("**********************");
    }
}
